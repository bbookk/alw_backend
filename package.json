    "array-to-txt-file": "^1.0.2",
    "body-parser": "^1.18.2",
    "chokidar": "^2.0.3",
    "csvtojson": "^1.1.9",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "fs-extra": "^6.0.0",
    "hapi": "^16.4.3",
    "httpntlm": "^1.7.5",
    "https": "^1.0.0",
    "line-by-line": "^0.1.6",
    "log4js": "^2.6.1",
    "moment": "^2.21.0",
    "morgan": "^1.9.0",
    "node-cron": "^1.2.1",
    "node-watch": "^0.5.8",
    "passport": "^0.4.0",
    "passport-saml": "^0.33.0",
    "pg": "^7.4.1",
    "pg-format": "^1.0.4",
    "pg-hstore": "^2.3.2",
    "pg-pool": "^2.0.3",
    "pm2": "^2.10.3",
    "sequelize": "^4.35.2",
    "soap": "^0.24.0",
    "ssl-root-cas": "^1.2.5",
    "strong-soap": "^1.9.0"
  },
