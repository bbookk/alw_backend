{
  "name": "alws_backend",
  "version": "1.0.2",
  "description": "Allowance System backend application",
  "main": "index.js",
  "scripts": {
    "start:local:app": "cross-env NODE_ENV=local PORT=8081 ./node_modules/.bin/nodemon app-hapi.js -w alwapp --max-old-space-size=8192 --inspect-brk",
    "start:local:batch": "cross-env NODE_ENV=local PORT=8081 ./node_modules/.bin/nodemon batch-hapi.js -w alwapp --max-old-space-size=8192 --inspect-brk",
    "start:dev:app": "cross-env NODE_ENV=development PORT=80 ./node_modules/.bin/pm2 start app-hapi.js --name alws-app",
    "start:dev:batch": "cross-env NODE_ENV=development PORT=80 ./node_modules/.bin/pm2 start batch-hapi.js --watch --name alws-batch",
    "start:staging:app": "cross-env NODE_ENV=staging PORT=80 ./node_modules/.bin/pm2 start app-hapi.js --name alws-app",
    "start:staging:batch": "cross-env NODE_ENV=staging PORT=80 ./node_modules/.bin/pm2 start batch-hapi.js --watch --name alws-batch",
    "test:all": "mocha test/**/*.js"
  },
